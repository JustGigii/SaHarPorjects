<Window x:Class="ClientCsharp.BoardcastView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientCsharp"
        mc:Ignorable="d"
        Title="BoardcastView" Height="450" Width="800">
    <StackPanel>
        <StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Background="AliceBlue" Name="ViewContainer" Height="382" Width="784" >
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBox  VerticalScrollBarVisibility="Auto" x:Name="textBoxChat" HorizontalAlignment="Left"   TextWrapping="Wrap" Text="" Height="39" Background="#FFB8B4B4" FontSize="24" Width="729" VerticalAlignment="Top"/>
            <Button x:Name="buttonSend"  Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="buttonSend_Click" Height="39"/>
        </StackPanel>
    </StackPanel>
</Window>
